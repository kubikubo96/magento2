<?xml version="1.0" encoding="UTF-8"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="OpenTechiz_Blog::blog_content" translate="title" title="Blog" sortOrder="10">

                        <resource id="OpenTechiz_Blog::post" translate="title" title="Blog Posts" sortOrder="40">
                            <resource id="OpenTechiz_Blog::save" translate="title" title="Save Blog Post"
                                      sortOrder="10"/>
                            <resource id="OpenTechiz_Blog::delete" translate="title" title="Delete Blog Post"
                                      sortOrder="20"/>
                        </resource>

                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
